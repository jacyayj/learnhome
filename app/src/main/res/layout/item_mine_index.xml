<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="pro.haichuang.learn.home.utils.ImageBinding" />

        <variable
            name="item"
            type="Integer" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/title"
            style="@style/text_18_33"
            android:layout_width="0dp"
            android:layout_marginEnd="15dp"
            android:maxLines="2"
            android:text="普通高校专科提前批录取院校完成计划"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/content"
            style="@style/text_14_99"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:maxLines="2"
            android:text="军事、公安等院校体检、面试合格名单汇总：7月6日本科提前批：7月7日至14日"
            app:layout_constraintEnd_toStartOf="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <com.yhy.widget.core.img.round.RoundImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:background="#ff0"
            app:riv_radius="5dp"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content">

            <TextView
                style="@style/text_13_99"
                android:layout_weight="1"
                android:text="20分钟前" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:src="@drawable/icon_my_delete" />

            <TextView
                style="@style/text_13_99"
                android:text="132评论   1096阅读" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>