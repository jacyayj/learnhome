<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.index.ZhaoShengActivity">

    <include layout="@layout/layout_title" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tabIndicatorColor="@color/color32C8FA"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/find_menu">

        <android.support.design.widget.TabItem
            style="@style/match_layout"
            android:layout_marginHorizontal="15dp"
            android:text="自主招生简章" />

        <android.support.design.widget.TabItem
            style="@style/match_layout"
            android:layout_marginHorizontal="15dp"
            android:text="综合评价" />

        <android.support.design.widget.TabItem
            style="@style/match_layout"
            android:layout_marginHorizontal="15dp"
            android:text="自主招生政策" />

        <!--<android.support.design.widget.TabItem-->
            <!--style="@style/match_layout"-->
            <!--android:layout_marginHorizontal="15dp"-->
            <!--android:text="主要专业" />-->

        <!--<android.support.design.widget.TabItem-->
            <!--style="@style/match_layout"-->
            <!--android:layout_marginHorizontal="15dp"-->
            <!--android:text="报考指南" />-->
    </android.support.design.widget.TabLayout>

    <TextView
        android:id="@+id/choose_city"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorF5FBFF"
        android:drawableEnd="@drawable/icon_sj_down"
        android:drawablePadding="10dp"
        android:gravity="end|center_vertical"
        android:paddingEnd="15dp"
        android:text="所在地"
        android:textColor="@color/color33"
        android:textSize="13sp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite" />
</LinearLayout>