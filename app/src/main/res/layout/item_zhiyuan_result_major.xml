<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="pro.haichuang.learn.home.ui.activity.index.itemmodel.MajorModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/match_layout"
        android:divider="@drawable/divider_horizontal_e0"
        android:orientation="horizontal"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="15sp">

            <TextView
                style="@style/text_14_ff"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_e0_radius_5dp"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="@{item.code}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingHorizontal="15sp">

            <TextView
                style="@style/text_10_99"
                android:paddingTop="15dp"
                android:text="@{item.majorName}"
                android:textColor="@color/color282828" />

            <TextView
                style="@style/text_10_99"
                android:paddingVertical="10dp"
                android:text="@{item.resultText}" />
        </LinearLayout>
    </LinearLayout>
</layout>