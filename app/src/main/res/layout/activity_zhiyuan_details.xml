<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF0F7FA"
    android:orientation="vertical"
    tools:context=".ui.activity.index.ZhiYuanDetailsActivity">

    <include layout="@layout/layout_title" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/choose_menu">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="院校优先填报" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="专业优先填报" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="自主填报" />
    </android.support.design.widget.TabLayout>

    <LinearLayout
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ebf2f5_radius_13dp"
            android:hint="请输入专业名称"
            android:paddingStart="10dp"
            android:textColor="@color/color33"
            android:textColorHint="@color/colorCCC4CC"
            android:textSize="14sp" />

        <Button
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@drawable/icon_vr_btn"
            android:text="搜索"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/sub_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        app:tabIndicatorHeight="0dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"
            android:divider="@color/colorF0F7FA"
            android:dividerHeight="5dp" />

        <Button
            android:id="@+id/show_result"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="15dp"
            android:background="@drawable/circle_49a7ff"
            android:elevation="5dp"
            android:text="志愿表"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <Button
            android:id="@+id/create_zhiyuan"
            style="@style/button_confirm"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="55dp"
            android:text="生成志愿表" />
    </FrameLayout>
</LinearLayout>