<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="pro.haichuang.learn.home.ui.activity.index.viewmodel.ZhuanYeDeailsModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/zhuanye_details_tab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            style="@style/text_14_002133"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:text="@{`专业名称：`+model.majorName}" />

        <TextView
            style="@style/text_14_002133"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:text="@{`专业门类：`+model.majorCategory}" />

        <TextView
            style="@style/text_14_002133"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:text="@{`年度毕业生规模：`+model.graduateCount}" />

        <TextView
            style="@style/text_14_002133"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:text="@{`就业率区间：`+model.jobStr}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="@color/colorD7DEE0" />


        <TextView
            style="@style/text_14_ff"
            android:layout_marginStart="30dp"
            android:background="@color/color66"
            android:paddingHorizontal="3dp"
            android:text="专业介绍"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="@{`     `+model.intro}"
            android:textColor="@color/color00"
            android:textSize="14sp" />
    </LinearLayout>
</layout>