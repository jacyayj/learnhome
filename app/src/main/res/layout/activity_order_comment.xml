<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.mine.OrderCommentActivity">

    <include layout="@layout/layout_title" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:background="@drawable/bg_ff_stroke_d2"
        android:gravity="start"
        android:padding="15sp"
        android:hint="写下对老师的评价吧~"
        android:textColor="@color/color33"
        android:textColorHint="@color/color99"
        android:textSize="16sp" />

    <Button
        android:id="@+id/comment"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_c8f2fa_radius_5dp"
        android:text="评价"
        android:textColor="@color/color32C8FA" />
</LinearLayout>