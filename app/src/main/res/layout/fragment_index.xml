<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF0F7FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            style="@style/text_10_726E72"
            android:layout_marginEnd="15dp"
            android:drawableTop="@drawable/icon_sun"
            android:gravity="center"
            android:text="28°" />

        <TextView
            android:id="@+id/to_choose_city"
            style="@style/text_14_736E73"
            android:drawableEnd="@drawable/icon_arrow_down"
            android:drawablePadding="5dp"
            android:text="成都" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ebf2f5_radius_13dp"
            android:paddingStart="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_index_search" />

            <TextView
                style="@style/text_14_CCC4CC"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="高考分数评估" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_add" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/match_layout"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="这是广告图"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />

            <pro.haichuang.learn.home.ui.weight.GridRecyclerView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_white_radius_4dp_shadow_c4c9cc"
                android:paddingBottom="5dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="10dp">

                <com.yhy.widget.core.img.round.RoundImageView
                    android:id="@+id/to_zhuanti"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="2.5dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher"
                    app:riv_radius="5dp" />

                <TableRow android:layout_marginTop="5dp">
                    <com.yhy.widget.core.img.round.RoundImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="2.5dp"
                        android:layout_weight="1"
                        android:background="@mipmap/ic_launcher"
                        app:riv_radius="5dp" />

                    <com.yhy.widget.core.img.round.RoundImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="2.5dp"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        app:riv_radius="5dp" />
                </TableRow>
            </TableLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.yhy.widget.core.img.round.RoundImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/ic_launcher"
                    app:riv_radius="5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/color8A9499" />

                <TextView
                    style="@style/text_13_8A9499"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@color/colorF0F7FA"
                    android:paddingHorizontal="5dp"
                    android:text="热门推荐" />
            </FrameLayout>

            <pro.haichuang.learn.home.ui.weight.AutoListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:divider="@color/colorF0F7FA"
                android:dividerHeight="5dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>