<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_5dp"
    android:divider="@drawable/divider_vertical_e0"
    android:orientation="vertical"
    android:showDividers="middle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/title"
            style="@style/text_16_00"
            android:layout_gravity="center"
            android:text="图示解释" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp"
            android:src="@drawable/icon_close_grey" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/legend_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_vertical_15"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:paddingStart="15dp"
        android:showDividers="middle"
        android:visibility="gone">

        <TextView
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_blue"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="专业名次" />

        <TextView
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_orange"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="专业级别" />

        <TextView
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_red"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="开设院校数" />

        <TextView
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_yellow"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="国家特色专业建设点" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/legend_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_vertical_15"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        android:paddingStart="15dp"
        android:showDividers="middle"
        android:visibility="gone">

        <TextView
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_blue_square"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="毕业生规模" />

        <TextView
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_red_light"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="就业区间" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/legend_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_vertical_15"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        android:paddingStart="15dp"
        android:showDividers="middle"
        android:visibility="gone">

        <TextView
            android:id="@+id/legend_3_1"
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_green"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="毕业生规模" />

        <TextView
            android:id="@+id/legend_3_2"
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_yellow"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="就业区间" />

        <TextView
            android:id="@+id/legend_3_3"
            style="@style/text_14_00"
            android:drawableStart="@drawable/icon_legend_red"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="就业区间" />
    </LinearLayout>
</LinearLayout>