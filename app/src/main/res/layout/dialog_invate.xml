<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_radius_8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/text_18_33"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:text="分享app给更多好友吧" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/share_to_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_btn_qq" />

                <TextView
                    style="@style/text_13_99"
                    android:paddingTop="15dp"
                    android:paddingBottom="50dp"
                    android:text="QQ" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_btn_wx" />

                <TextView
                    style="@style/text_13_99"
                    android:paddingTop="15dp"
                    android:paddingBottom="50dp"
                    android:text="微信" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_moments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/share_btn_pyq" />

                <TextView
                    style="@style/text_13_99"
                    android:paddingTop="15dp"
                    android:paddingBottom="40dp"
                    android:text="朋友圈" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_dialog_close" />
</LinearLayout>