<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ui.activity.index.SchoolCompareActivity">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal_d7dde0"
        android:orientation="horizontal"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@drawable/divider_vertical_d7dde0"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                style="@style/text_12_2E3133"
                android:paddingVertical="15dp"
                android:paddingStart="10dp"
                android:text="院校名称"
                android:textColor="@color/color002133" />

            <TextView
                style="@style/text_12_2E3133"
                android:paddingVertical="15dp"
                android:paddingStart="10dp"
                android:text="院校类型"
                android:textColor="@color/color002133" />

            <TextView
                style="@style/text_12_2E3133"
                android:paddingVertical="15dp"
                android:paddingStart="10dp"
                android:text="批次"
                android:textColor="@color/color002133" />

            <TextView
                style="@style/text_12_2E3133"
                android:paddingVertical="15dp"
                android:paddingStart="10dp"
                android:text="招新人数"
                android:textColor="@color/color002133" />

            <TextView
                style="@style/text_12_2E3133"
                android:paddingVertical="15dp"
                android:paddingStart="10dp"
                android:text="是否招新"
                android:textColor="@color/color002133" />
        </LinearLayout>

        <pro.haichuang.learn.home.ui.weight.CompareRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorD7DDE0" />
</LinearLayout>